    private LambdaQueryWrapper<${ClassName}> buildQueryWrapper(${ClassName}Dto dto) {
        LambdaQueryWrapper<${ClassName}> lqw = Wrappers.lambdaQuery();
#foreach($column in $columns)
#if($column.query)
#set($queryType=$column.queryType)
